<%- include ("../_header"); %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <h1>Users</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>IsAdmin</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
        <% data.forEach(doc => { %>
            <tr>
                <td><%= doc.Name %></td>
                <td><%= doc.email %></td>
                <td><%= doc.isAdmin %></td>
                <td><%= doc.password %></td>
                <td>
                    <a href="/editUser/<%= doc.id %>">Edit</a>
                    <a href="/deleteUser/<%= doc.id %>" onclick="return confirm(
                    'Are you sure you want to delete this item?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>
    <a href="/addUser">Add New User</a>
</body>
</html>