<%- include ("../_header"); %>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
</head>
<body>
    <h1>Edit User</h1>
    <form method="POST" action="/updateUser/<%= doc.id %>">
        <label for="Name">Name: </label>
        <input type="text" id="Name" name="Name" value="<%= doc.Name %>" required>
        <br>
        <label for="email">Email: </label>
        <input type="text" id="email" name="email" value="<%= doc.email %>" required>
        <br>
        <label for="isAdmin">isAdmin: </label>
        <input type="text" id="isAdmin" name="isAdmin" value="<%= doc.isAdmin %>" required>
        <br>
        <label for="password">Password: </label>
        <input type="text" id="password" name="password" value="<%= doc.password %>" required>
        <br>
        <button type="submit">Edit User</button>
    </form>
    <a href="/">Back to Users</a>
</body>
</div>
</body>
</html>